<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLName</key>
			<string>com.quantumwallet.tap-to-send</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>quantumwallet</string>
			</array>
		</dict>
	</array>
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSExceptionDomains</key>
		<dict>
			<key>api.nessieisreal.com</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
				<key>NSExceptionMinimumTLSVersion</key>
				<string>TLSv1.0</string>
				<key>NSIncludesSubdomains</key>
				<true/>
				<key>NSCameraUsageDescription</key>
				<string>We need camera access to capture your INE identification document for verification during onboarding.</string>
			</dict>
		</dict>
	</dict>
	<key>NSBonjourServices</key>
	<array>
		<string>_quantumtap._tcp</string>
	</array>
	<key>UIApplicationSceneManifest</key>
	<dict>
		<key>UIApplicationSupportsMultipleScenes</key>
		<true/>
		<key>UISceneConfigurations</key>
		<dict>
			<key>UIWindowSceneSessionRoleApplication</key>
			<array>
				<dict>
					<key>UISceneConfigurationName</key>
					<string>Default Configuration</string>
					<key>UISceneDelegateClassName</key>
					<string>$(PRODUCT_MODULE_NAME).SceneDelegate</string>
				</dict>
			</array>
		</dict>
	</dict>
	<key>UILaunchScreen</key>
	<dict/>
	<key>com.apple.developer.associated-domains</key>
	<array>
		<string>applinks:quantumwallet.app</string>
	</array>
	<key>NSFaceIDUsageDescription</key>
	<string>This app uses Face ID to securely authenticate Tap-to-Send transactions.</string>
	<key>NSLocalNetworkUsageDescription</key>
	<string>This app uses local network for secure peer-to-peer money transfers.</string>
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>This app uses Bluetooth for tap-to-send money transfers between nearby devices.</string>
	<key>NSBluetoothPeripheralUsageDescription</key>
	<string>This app uses Bluetooth for tap-to-send money transfers between nearby devices.</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>We need microphone access for voice guidance and to process your responses during onboarding.</string>
	<key>NSSpeechRecognitionUsageDescription</key>
	<string>We use speech recognition to understand your voice commands and responses during onboarding.</string>
</dict>
</plist>
